<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:text="@string/title"
            android:textSize="@dimen/title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingBottom="@dimen/ques_bottom_padding"
            android:text="@string/title_qus1"
            android:textSize="@dimen/ques_size" />


        <RadioGroup
            android:id="@+id/raido_group_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/first_radio_qus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_radio_qus1" />

            <RadioButton
                android:id="@+id/second_radio_qus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/second_radio_qus1" />

            <RadioButton
                android:id="@+id/third_radio_qus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/third_radio_qus1" />
        </RadioGroup>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_qus2"
            android:paddingBottom="@dimen/ques_bottom_padding"
            android:textStyle="bold"

            android:textSize="@dimen/ques_size" />


        <RadioGroup
            android:id="@+id/raido_group_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/first_radio_qus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_radio_qus2" />

            <RadioButton
                android:id="@+id/second_radio_qus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/second_radio_qus2" />

            <RadioButton
                android:id="@+id/third_radio_qus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/third_radio_qus2" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_qus3"
            android:paddingBottom="@dimen/ques_bottom_padding"
            android:textStyle="bold"

            android:textSize="@dimen/ques_size" />

        <RadioGroup
            android:id="@+id/raido_group_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/first_radio_qus3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_radio_qus3" />

            <RadioButton
                android:id="@+id/second_radio_qus3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/second_radio_qus3" />

            <RadioButton
                android:id="@+id/third_radio_qus3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/third_radio_qus3" />
        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_qus4"
            android:paddingBottom="@dimen/ques_bottom_padding"
            android:textStyle="bold"
            android:textSize="@dimen/ques_size" />

        <RadioGroup
            android:id="@+id/raido_group_four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/first_radio_qus4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_radio_qus4" />

            <RadioButton
                android:id="@+id/second_radio_qus4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/second_radio_qus4" />

            <RadioButton
                android:id="@+id/third_radio_qus4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/third_radio_qus4" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_qus5"
            android:textStyle="bold"
            android:textSize="@dimen/ques_size" />

        <EditText
            android:id="@+id/edit_text_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_text_qus5" />


        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="onSubmitClicked"
            android:text="Submit" />
    </LinearLayout>

</ScrollView>
